<%= form_for @restaurant do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :like %>
  <%= f.select(:like, options_for_select([['True', true], ['False', false]], @restaurant.like)) %>

  <%= f.label :rating %>
  <%= f.select :rating, [1,2,3,4,5]%>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :comment %>
  <%= f.text_field :comment %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <button class="waves-effect pink btn-large"> <%= f.submit %> </button>
<% end %>